{
  "name": "mika-scraper",
  "version": "1.0.3",
  "description": "A modular and extensible web scraping toolkit built with TypeScript",
  "type": "module",
  "main": "./dist/cjs/index.cjs.js",
  "module": "./dist/esm/index.esm.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.esm.js"
      },
      "require": {
        "types": "./dist/types/index.d.cts",
        "default": "./dist/cjs/index.cjs.js"
      }
    },
    "./cli": {
      "import": "./dist/esm/cli.esm.js",
      "require": "./dist/cjs/cli.cjs.js"
    }
  },
  "files": [
    "dist",
    "test"
  ],
  "bin": {
    "mika-scraper": "./dist/cjs/cli.cjs.js"
  },
  "scripts": {
    "build": "tsup",
    "build:obf": "tsup && node build/obfuscate.js",
    "build:types": "tsc -p tsconfig.build.json",
    "build:esm": "cross-env BUILD_FORMAT=esm tsup",
    "build:cjs": "cross-env BUILD_FORMAT=cjs tsup",
    "build:full": "npm run build:obf && node build/moveFileToFolder.js",
    "start": "node dist/cjs/index.cjs.js",
    "dev": "tsup --watch --onSuccess \"node dist/index.cjs.js\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" && prettier --write \"test/**/*.ts\"",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "prepare": "npm run build:full"
  },
  "keywords": [
    "scraper",
    "web scraping",
    "typescript",
    "obfuscator",
    "textcraft",
    "zod",
    "mika-scraper",
    "cli",
    "scrapper"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "author": "Zann Roderizz <zannlovez@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/MikaYelovich/mika-scraper"
  },
  "homepage": "https://github.com/MikaYelovich/mika-scraper#readme",
  "bugs": {
    "url": "https://github.com/MikaYelovich/mika-scraper/issues"
  },
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.9.0",
    "atob": "^2.1.2",
    "axios": "^1.10.0",
    "boxen": "^8.0.1",
    "chalk": "^5.3.0",
    "cheerio": "^1.1.0",
    "cross-env": "^7.0.3",
    "eventsource": "^4.0.0",
    "fast-glob": "^3.3.3",
    "fast-xml-parser": "^5.2.5",
    "figlet": "^1.6.0",
    "gradient-string": "^2.0.2",
    "inquirer": "^12.7.0",
    "jsdom": "^26.1.0",
    "mime-types": "^3.0.1",
    "node-fetch": "^3.3.2",
    "ora": "^7.0.1",
    "uuid": "^11.1.0",
    "xml2js": "^0.6.2",
    "yargs": "^17.7.2",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/atob": "^2.1.4",
    "@types/eventsource": "^1.1.15",
    "@types/figlet": "^1.5.7",
    "@types/gradient-string": "^1.1.6",
    "@types/inquirer": "^9.0.8",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.13",
    "@types/ws": "^8.18.1",
    "@types/xml2js": "^0.4.14",
    "@types/yargs": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "javascript-obfuscator": "^4.1.1",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
