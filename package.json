{
  "name": "mika-scraper",
  "version": "1.0.0",
  "description": "A modular and extensible web scraping toolkit built with TypeScript, axios, and cheerio.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "test"
  ],
  "bin": {
    "mika-scraper": "dist/cli.cjs.js"
  },
  "scripts": {
    "build": "tsup",
    "build:obf": "tsup && node build/obfuscate.js",
    "build:types": "tsc -p tsconfig.types.json",
    "build:full": "tsup && tsc -p tsconfig.types.json && node build/obfuscate.js",
    "start": "node dist/index.cjs.js",
    "dev": "tsup --watch --onSuccess \"node dist/index.cjs.js\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" && prettier --write \"test/**/*.ts\"",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "prepare": "npm run build:obf"
  },
  "keywords": [
    "scraper",
    "web scraping",
    "axios",
    "cheerio",
    "typescript",
    "obfuscator",
    "textcraft",
    "zod",
    "mika-scraper"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "Zann Roderizz <zannlovez@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/MikaYelovich/mika-scraper"
  },
  "homepage": "https://github.com/MikaYelovich/mika-scraper#readme",
  "bugs": {
    "url": "https://github.com/MikaYelovich/mika-scraper/issues"
  },
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "atob": "^2.1.2",
    "axios": "^1.10.0",
    "chalk": "^5.3.0",
    "cheerio": "^1.1.0",
    "eventsource": "^4.0.0",
    "fast-glob": "^3.3.3",
    "fast-xml-parser": "^5.2.5",
    "figlet": "^1.6.0",
    "gradient-string": "^2.0.2",
    "jsdom": "^26.1.0",
    "node-fetch": "^3.3.2",
    "ora": "^7.0.1",
    "uuid": "^11.1.0",
    "xml2js": "^0.6.2",
    "yargs": "^17.7.2",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/atob": "^2.1.4",
    "@types/eventsource": "^1.1.15",
    "@types/figlet": "^1.5.7",
    "@types/gradient-string": "^1.1.6",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.13",
    "@types/xml2js": "^0.4.14",
    "@types/yargs": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "javascript-obfuscator": "^4.1.1",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
